	form(action='/update', method='post', name='firstNameUpdate')
		table
			tbody
				tr
					td #{firstname}
					td
						div.input
							input(type='text' name='firstName' required )
					td 
						div.actions
							input(type='submit', value='Change First Name')
	form(action='/update', method='post', name='lastNameUpdate')
		table
			tbody
				tr
					td #{lastname}
					td
						div.input
							input(type='text' name='lastName' required)
					td 
						div.actions
							input(type='submit', value='Change Last Name')
	form(action='/update', method='post', name='passwordUpdate')
		table
			tbody
				tr
					td Password
					td
						div.input
							input(type='text' name='password' required)
					td 
						div.actions
							button(onclick='passwordChange()', type='submit') Change Password 
	form(action='/update', method='post', name='usernameUpdate')
		table
			tbody
				tr
					td #{username}
					td
						div.input
							input(type='text' name='username' required)
					td 
						div.actions
							input(type='submit', value='Change Username')
