			.topnav {
				overflow: hidden;
				background-color: #333;
			}
			.topnav a {
				float: left;
				color: white;
				padding: 15px 15px;
				text-decoration: none;
				font-size: 17px;
			}
			.topnav a:hover {
				background-color: #ddd;
				color: black;
			}
			.topnav a.active {
				background-color: #3c7ae6;
				color: white;
			}
			ul, li {
				display: inline;
				padding: 5px 5px;
			}

