style.
		table, th, tr, td {
			border:1px solid black;
			margin-left: auto;
			margin-right: auto;
		}
		body {
			margin: auto;
			vertical-align: left;
			background: #e6e6e6;
			text-align: center;
		}
		.topnav {
			overflow: hidden;
			background-color: #333;
		}
		.topnav a {
			float: left;
			color: white;
			padding: 15px 15px;
			text-decoration: none;
			font-size: 17px;
		}
		.topnav a:hover {
			background-color: #ddd;
			color: black;
		}
		.topnav a.active {
			background-color: #3c7ae6;
			color: white;
		}

