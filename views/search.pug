style.
		table, th, tr, td {
			border:1px solid black;
			margin-left: auto;
			margin-right: auto;
		}
		body {
			margin: auto;
			vertical-align: left;
			background: #e6e6e6;
			text-align: center;
		}
		.topnav {
			overflow: hidden;
			background-color: #333;
		}
		.topnav a {
			float: left;
			color: white;
			padding: 15px 15px;
			text-decoration: none;
			font-size: 17px;
		}
		.topnav a:hover {
			background-color: #ddd;
			color: black;
		}
		.topnav a.active {
			background-color: #3c7ae6;
			color: white;
		}
		.topnav button {
			border: none;
			margin-left: 57.14px;
			margin-right: 57.14px;
			margin-top: 18.5px;
			height: 29px;
		}
		.dark-mode {
			background-color: #282727;
			color: white;
		}
		.dark-mode table {
			color: white;
		}
		.dark-mode a.page-link {
			background-color: #353434;
			color: white;
		}
		.dark-mode .table-hover tbody tr:hover td {
			color: white;
		}

script.
	function darkModeFunc() {
		if (document.cookie.split("=")[1] == "true") {
			document.cookie = "isDark=false"
		} else {
		document.cookie = "isDark=true";
		}
		var element = document.body;
		element.classList.toggle("dark-mode");
	}
	function colorCheck() {
		if (document.cookie.split("=")[1] == "true") {
			var element = document.body;
			element.classList.toggle("dark-mode");
		}
	}

