doctype html 

html 
    head 
    title Comment Filter Application
    style. 
        table, tr, td {
            border:1px solid black;
        }
body 

    form(name="comment-page", method ="post")
        div.input 
            span.label Post a comment below: 
            br
            textarea(placeholder='Add a comment...',name="commentbox", cols="40", rows="5",maxlength="250")  
        div.actions 
            input(type="submit", value="Post Comment")
    br

    h1 Comments 
    table(style='width:50%') 
        tbody 

            each comment in comments 
                tr 
                    td #{comment.text} 
                    