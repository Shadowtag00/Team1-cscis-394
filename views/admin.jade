head 
	title Comment Filter Application
	style.
		table, th, tr, td {
		border:1px solid black;
		}
		.header {
		padding: 10px 16px;
 		background: #3366ff;
  		color: #d3d3d3;
		}
		.content {
  		padding: 16px;
		}
		.sticky {
		position: fixed;
		top: 0;
		width: 100%
		}
		.sticky + .content {
		padding-top: 102px;
		}
		div.c {
		text-indent: 50%;
		}
		
body
	#myHeader.header
		h2 Welcome Admin

	form(name="comment-page", method="post", action="/admin")
		div.input 
			span.label Post a comment:
			br
			textarea(placeholder='Add a comment...',name="commentbox", cols="40", rows="5",maxlength="250")
		div.actions
			input(type="submit", value="Post Comment")
	br
	//a(href='/comment_form') Create new comment
	//a(href='/admin/comment_form') Create new comment
	h3 Comments
	table(style='width:50%') 
		thead 
			tr 
				th Comment Id
				th Username
				//th Date	
				th Comment
				th Flagged?
				th Flag/Unflag
				th Delete
		tbody 
			each comment in comments 
				tr 
					td #{ comment.comment_id }
					td #{ comment.username }
					//td #{ moment(Date.now()).format('MM/DD/YYYY') }		//added, added moment in index.js
					td #{ comment.text } 
					td #{ comment.is_flagged }
					td
						a(href='/admin/#{comment.comment_id}/form') Flag/Unflag
					td
						//a(href='/comments/#{comment.comment_id}/delete') Delete
						a(href='/admin/#{comment.comment_id}/delete' onClick="return confirm('Are you sure you want to delete this comment?');") Delete

