head 
	title Comment Filter Application
	style.
		table, th, tr, td {
		border:1px solid black;
		}
		body {
			margin: auto;
			vertical-align: left;
		}
		.topnav {
			overflow: hidden,
			background-color: #333;
		}
		.topnav a {
			float: left;
			color: black;
			padding: 15px 15px;
			text-decoration: none;
			font-size: 17px;
		}
		.topnav a:hover {
			background-color: #ddd;
			color: black;
		}
		.topnav a.active {
			background-color: #3c7ae6;
			color: white;
		}

		
body
	.topnav
		//a(class='active', href='home') Main Page
		//a(href='posts') My Posts
		a(href='logout') Logout
	br
	br
	br
	#myHeader.header
		h2 Welcome Admin

	form(name="comment-page", method="post", action="/admin")
		div.input 
			span.label Post a comment:
			br
			textarea(placeholder='Add a comment...',name="commentbox", cols="40", rows="5",maxlength="250")
		div.actions
			input(type="submit", value="Post Comment")
	br
	h3 Comments
	table(style='width:50%') 
		thead 
			tr 
				th Comment Id
				th Username
				//th Date	
				th Comment
				th Flagged?
				th Flag/Unflag
				th Delete
		tbody 
			each comment in comments 
				tr 
					td #{ comment.comment_id }
					td #{ comment.username }
					//td #{ moment(Date.now()).format('MM/DD/YYYY') }		//added, added moment in index.js
					td #{ comment.text } 
					td #{ comment.is_flagged }
					td
						a(href='/admin/#{comment.comment_id}/form') Flag/Unflag
					td
						
						a(href='/admin/#{comment.comment_id}/delete' onClick="return confirm('Are you sure you want to delete this comment?');") Delete

