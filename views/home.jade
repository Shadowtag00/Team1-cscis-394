head 
	title Comment Filter Application
	style.
		table, th, tr, td {
		border:1px solid black;
		}
		
body
	a(href='/comment_form') Create new comment
	h1 Enter Comment
	table
		tbody 
			tr 
				td User Comment 
				td 
					textarea(name="comment_box", cols="50", rows="4") 
	h2 Comments 
	table(style='width:30%', height='90px')
		thead
			tr 
				th User ID
				th Comment
		each comment in comments
			tr
				td #{ comment.comment_id }
				td #{ comment.text }
			


