head 
	title Comment Filter Application
	style.
		table, th, tr, td {
			border:1px solid black;
			margin-left: auto;
			margin-right: auto;
			margin-bottom: 15px;
		}
		body {
			margin: auto;
			vertical-align: left;
			background: #e6e6e6;
			text-align: center;
		}
		.topnav {
			overflow: hidden;
			background-color: #333;
		}
		.topnav a {
			float: left;
			color: white;
			padding: 15px 15px;
			text-decoration: none;
			font-size: 17px;
		}
		.topnav a:hover {
			background-color: #ddd;
			color: black;
		}
		.topnav a.active {
			background-color: #3c7ae6;
			color: white;
		}

body
	.topnav
		a(class='active', href='home') Main Page 
		a(href='profile') My Posts
		a(href='logout') Logout
		a(href='update') Update Profile
		a(href='/home/delete' onClick="return confirm('Are you sure you want to delete this profile?');") Delete Profile
	br
	br
	br
	p 
		form(action='/search' method='get')
			|User Search: 
			input(type="text" name="searchcriteria")
			input(type='submit' value='Search')
	br
	h1(style='clear:left') Enter a Comment
	form(action='/home', method='post', name='user_comment', style='clear:left')
		table
			tbody 
				tr 
					td #{message}
					td 
						div.input
							textarea(name="comment_box", cols="100", rows="4", placeholder='Enter a Comment...')
					td 
						div.actions
							input(type='submit', value='Post Comment')
	h2 Comments 
	
	table(style='width:30%', height='90px')
		thead
			tr 
				th User
				th Comment
				th Post Date
		each comment in comments
			tr
				td(style='text-align:center') #{ comment.username }
				td(style='text-align:center') #{ comment.text }
				td(style='text-align:center') #{moment(comment.post_date).format('MM-DD-YYYY hh:mm a')}

	ul
		while n < page_count+1
	li
		a(href="?page="+n)=n++

			
