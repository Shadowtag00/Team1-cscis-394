head 
	title Comment Filter Application
	style.
		table, th, tr, td {
			border:1px solid black;
		}
		body {
			margin: auto;
			vertical-align: left;
		}
		.topnav {
			overflow: hidden,
			background-color: #333;
		}
		.topnav a {
			float: left;
			color: black;
			padding: 15px 15px;
			text-decoration: none;
			font-size: 17px;
		}
		.topnav a:hover {
			background-color: #ddd;
			color: black;
		}
		.topnav a.active {
			background-color: #3c7ae6;
			color: white;
		}
		.topnav a.clear {
			clear: none;
		}

body
	.topnav
		a(class='active', href='/') Main Page
		a(href='#posts') My Posts
		a(href='#login') Sign Up/Login
		a(href='#logout') Logout
	br
	h1 Enter Comment
	table
		tbody 
			tr 
				td User Comment 
				td 
					textarea(name="comment_box", cols="100", rows="4")
				td 
					button(type='button', name='post_button') Post Comment 
	h2 Comments 
	table(style='width:30%', height='90px')
		thead
			tr 
				th User ID
				th Comment
		each comment in comments
			tr
				td(style='text-align:center') #{ comment.comment_id }
				td(style='text-align:center') #{ comment.text }
			


